<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout5__"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:tint="@color/fifth"
                    app:srcCompat="@drawable/ic_left_arrow"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notoseriftc_semibold"
                            android:gravity="center"
                            android:text="申請編號"
                            android:textColor="@color/fourth"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtApplyNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notoseriftc_semibold"
                            android:gravity="center"
                            android:text="申請編號"
                            android:textColor="@color/fourth"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_line_dash"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notoseriftc_semibold"
                            android:gravity="center"
                            android:text="申請內容"
                            android:textColor="@color/fourth"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="展覽名稱"
                                android:textColor="@color/fourth"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtApplyName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center|left"
                                android:text="展覽名稱"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="展覽類型"
                                android:textColor="@color/fourth"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtApplyType"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center|left"
                                android:text="展覽類型"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="開始日期"
                                android:textColor="@color/fourth"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtApplyStartTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center|left"
                                android:text="startTime"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="結束日期"
                                android:textColor="@color/fourth"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtApplyEndTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center|left"
                                android:text="endTime"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center|left"
                                android:paddingLeft="5dp"
                                android:text="欲建立展覽"
                                android:textColor="@color/fourth"
                                android:textSize="18sp" />

                            <CheckBox
                                android:id="@+id/chkApply2D_"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:text="2D" />

                            <CheckBox
                                android:id="@+id/chkApply3D_"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="false"
                                android:clickable="true"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:text="3D" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:gravity="center|left"
                                android:paddingLeft="5dp"
                                android:text="展覽簡介"
                                android:textColor="@color/fourth"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtApplyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:fontFamily="@font/notoseriftc_semibold"
                                android:text="124333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnApplyListStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:tint="@color/fourth"
                    app:srcCompat="@drawable/ic_right_arrow"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>