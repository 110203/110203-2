<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.profile.Login">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/i14_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_semibold"
                android:text="登入"
                android:textColor="@color/sixth"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_semibold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="帳號"
                android:textColor="@color/sixth"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_semibold"
                android:hint="您的email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:textColor="@color/sixth"
                android:textColorHint="@color/fifth" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_semibold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="密碼"
                android:textColor="@color/sixth"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtLoginPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notoseriftc_semibold"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:textColor="@color/sixth"
                    android:textColorHint="@color/fifth" />

                <Button
                    android:id="@+id/btnLoginVisi"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/button_radius"
                    app:backgroundTint="#00000000"
                    app:icon="@drawable/ic_visibility"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/sixth" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtForgetPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_semibold"
                android:gravity="right"
                android:text="忘記密碼？"
                android:textColor="@color/fifth" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_radius_white"
                android:fontFamily="@font/notoseriftc_semibold"
                android:text="登入"
                android:textSize="16sp"
                app:backgroundTint="@color/sixth" />

            <TextView
                android:id="@+id/txtGoToSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_semibold"
                android:gravity="center"
                android:text="還沒有帳號嗎？點這裡註冊"
                android:textColor="@color/fifth" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>