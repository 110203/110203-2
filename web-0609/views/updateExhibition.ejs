    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

  </head>
  <body>
    <div class="container-fluid">
        <div class="row center">
          <div class="col-md-12 d-flex align-items-center min-vh-100 py-3 py-md-0">
            <div class="container">
              <div class="card login-card">
                <div class="row no-gutters">
                  <div class="col-md-12 card-body tab-content">
					        <form role="form" enctype="multipart/form-data" action="/updateE" method="POST">
                        <div class="form-group">	
                          <h2>更新展覽</h2>   
                          <label for="exampleInputPassword1">
                            展覽編號
                           </label>
                           <input type="text" class="form-control" id="exampleInputPassword1" name='eNo' value="<%= items.eNo %>" readonly>
                           
                          <label for="exampleInputPassword1">
                            會員帳號
                          </label>
                          <input type="email" class="form-control" style="width: 100%!important;"  name="memNo" value="<%= items.memNo %>" readonly>
                          
                          <label for="exampleInputEmail1">
                            展覽檔案
                          </label>
                          <input type="file" class="form-control-file"name="eFile">
                        </div>
                
                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            展覽名稱
                          </label>
                          <input type="text" class="form-control" id="exampleInputPassword1"name="eName" value="<%= items.eName %>" required>
                        </div>
                
                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            展覽簡介
                          </label>
                          <input type="text" class="form-control" id="exampleInputPassword1" name="introdution" value="<%= items.introdution %>"required>
                        </div>
                
                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            開始時間
                          </label>
                          <input type="date" class="form-control" id="exampleInputPassword1" name="startTime" value="<%= items.startTime %>"required>
						            </div>
						
                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            結束時間
                          </label>
                          <input type="date" class="form-control" id="exampleInputPassword1" name="endTime" value="<%= items.endTime %>" required>
                        </div>
                
                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            展覽預覽圖
						            </label>
                          <% if (null != items.eImage){%>
                            <img style="width: 500px;padding: 10px 30px 10px 20px; margin: 10px;" src="/file/<%= items.eImage %>" />
                          <% } %>
                          <input type="file" class="form-control-file" id="exampleInputFile" name="eImage">
                        </div>
                
                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            類別
                          </label>
                          <input type="text" class="form-control" id="exampleInputPassword1" name="eType" value="<%= items.eType %>" required>
                        </div>

                        <div class="form-group">					 
                          <label for="exampleInputPassword1">
                            展覽狀態
                          </label>
                          <input type="text" class="form-control" id="exampleInputPassword1" name="eDelete" value="<%= items.eDelete %>" required>
                        </div>

                        <input name="login" id="login" class="btn btn-block login-btn mb-4" type="submit" value="submit">
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/scripts.js"></script>
  </body>
</html>